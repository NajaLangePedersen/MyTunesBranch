<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="245.0" prefWidth="334.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mytunes.GUI.controllers.SongViewController">
    <children>
        <VBox layoutX="20" layoutY="20" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Title -->
            <HBox spacing="10">
                <Label prefHeight="17.0" prefWidth="60.0" text="Title:" />
                <TextField fx:id="txtTitle" prefHeight="25.0" prefWidth="198.0" />
            </HBox>

            <!-- Artist -->
            <HBox spacing="10">
                <Label prefHeight="17.0" prefWidth="60.0" text="Artist:" />
                <TextField fx:id="txtArtist" prefHeight="25.0" prefWidth="192.0" />
            </HBox>

            <!-- Category with ComboBox and More button -->
            <HBox spacing="10">
                <Label prefHeight="17.0" prefWidth="60.0" text="Category:" />
                <ComboBox fx:id="comboBoxGenre" prefHeight="25.0" prefWidth="70.0" />
                <Button text="More..." />
            </HBox>

            <!-- File with Choose button -->
            <HBox spacing="10">
                <Label prefHeight="17.0" prefWidth="60.0" text="File:" />
                <TextField fx:id="txtFile" prefWidth="150" />
                <Button onAction="#onBtnChooseFile" text="Choose..." />
            </HBox>

            <!-- Time -->
            <HBox spacing="10">
                <Label prefHeight="17.0" prefWidth="60.0" text="Time:" />
                <TextField fx:id="txtTime" blendMode="DARKEN" editable="false" prefWidth="100" />
            </HBox>

            <!-- Action buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#onBtnCancel" text="Cancel" />
                <Button onAction="#onBtnSave" text="Save" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
